<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CreateCardDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardView" parent="CardView.Light">
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="Cv_Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/cv_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
